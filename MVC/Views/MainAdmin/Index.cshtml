@model IEnumerable<User>

<table class="table table-bordered table-condensed table-hover table-responsive table-striped">
    <tr>
        <th>@Html.DisplayNameFor(p => p.firstname)</th>
        <th>@Html.DisplayNameFor(p => p.middlename)</th>
        <th>@Html.DisplayNameFor(p => p.lastname)</th>
        <th>@Html.DisplayNameFor(p => p.Image)</th>
        <th>@Html.DisplayNameFor(p => p.hiredate)</th>
        <th>@Html.DisplayNameFor(p => p.birthdate)</th>
        <th>@Html.DisplayNameFor(p => p.address)</th>
        <th>@Html.DisplayNameFor(p => p.phoneNo)</th>
        <th>@Html.DisplayNameFor(p => p.salary)</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(p => item.firstname)</td>
            <td>@Html.DisplayFor(p => item.middlename)</td>
            <td>@Html.DisplayFor(p => item.lastname)</td>
            <td>@Html.DisplayFor(p => item.Image)</td>
            <td>@Html.DisplayFor(p => item.hiredate)</td>
            <td>@Html.DisplayFor(p => item.birthdate)</td>
            <td>@Html.DisplayFor(p => item.address)</td>
            <td>@Html.DisplayFor(p => item.phoneNo)</td>
            <td>@Html.DisplayFor(p => item.salary)</td>
            <td>@Html.ActionLink("Edit Me", "Edit", new { id = item.User_ID })</td>
            <td>@Html.ActionLink("Delete Me", "Delete", new { id = item.User_ID })</td>
        </tr>
    }
</table>
