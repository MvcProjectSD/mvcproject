@model  MVC.User



<h1 class="text-center"> <b> Welcome @Model.firstname </b> </h1>
<br>

<table class="table table-bordered table-condensed table-hover table-responsive table-striped">

    <tr>
        <td> First Name</td>
        <td>@Html.DisplayFor(p => p.firstname)</td>
    </tr>
    <tr>
        <td> Middle Name</td>
        <td>@Html.DisplayFor(p => p.middlename)</td>
    </tr>
    <tr>
        <td> Last Name</td>
        <td>@Html.DisplayFor(p => p.lastname)</td>
    </tr>
    <tr>
        <td> Hire Date</td>
        <td>@Html.DisplayFor(p => p.hiredate)</td>
    </tr>
    <tr>
        <td> Birth Date</td>
        <td>@Html.DisplayFor(p => p.birthdate)</td>
    </tr>
    <tr>
        <td> Address</td>
        <td>@Html.DisplayFor(p => p.address)</td>
    </tr>
    <tr>
        <td> phone Number</td>
        <td>@Html.DisplayFor(p => p.phoneNo)</td>
    </tr>
    <tr>
        <td> Salary</td>
        <td>@Html.DisplayFor(p => p.salary)</td>
    </tr>
  
        </table>

        @Html.ActionLink("Edit Profile", "EditProfile", new { id = @Model.User_ID })
