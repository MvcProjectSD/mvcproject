@model IEnumerable<Book>

<form method="get" action="">
    <select name="month" id="month">
        <option selected></option>
        <option value="1">January</option>
        <option value="2">February</option>
        <option value="3">March</option>
        <option value="4">April</option>
        <option value="5">May</option>
        <option value="6">June</option>
        <option value="7">July</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
    </select>
    <input type="submit" value="Find" />
</form>
<br />
<table class="table table-bordered table-condensed table-hover table-responsive table-striped">
    <tr>
        <th>

            @Html.DisplayNameFor(t => t.title)
        </th>
        <th>
            @Html.DisplayNameFor(t => t.author)
        </th>
        <th>
            @Html.DisplayNameFor(t => t.category)
        </th>
        <th>
            @Html.DisplayNameFor(t => t.edition)
        </th>
        <th>
            @Html.DisplayNameFor(t => t.shelfNo)
        </th>
        <th>
            @Html.DisplayNameFor(t => t.Available)
        </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(t => item.title)
            </td>
            <td>
                @Html.DisplayFor(t => item.author)
            </td>
            <td>
                @Html.DisplayFor(t => item.category)
            </td>
            <td>
                @Html.DisplayFor(t => item.edition)
            </td>
            <td>
                @Html.DisplayFor(t => item.shelfNo)
            </td>
            <td>
                @Html.DisplayFor(t => item.Available)
            </td>

        </tr>
    }
</table>




